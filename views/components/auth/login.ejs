<div class="hp-main-layout-content">
    <div class="row mt-15 mb-10 d-flex justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4><i class="hp-text-color-dark-0 ri-2x ri-login-box-line"></i>Login</h4>
                    <p class="hp-p1-body">
                        Isi formulir dibawah untuk mengakses akun anda.
                    </p>
                    <% if(error.length != 0) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>

                    <% if(success.length != 0) { %>
                        <div class="alert alert-success"><%= success %></div>
                    <% } %>
                    <form action="<%= process.env.APP_URL %>/auth/login" method="POST">
                        <label for="exampleInputPassword1" class="form-label">Username</label>
                        <div class="input-group mb-16">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="hp-text-color-dark-0 ri-2x ri-mail-fill"></i>
                            </span>
                        <% if(errorForm.length === 0){ %>
                            <input type="text" name="username" class="form-control" placeholder="Username">
                        <% }else{ %>
                            <% errorForm.forEach(function(curr, index, val){ %>
                                <% if(curr.param == "username") { %>
                                    <input type="text" name="username" value="<%= curr.value %>" class="form-control is-invalid" placeholder="Username">
                                    <div class="invalid-feedback">
                                        <%= curr.message %>
                                    </div>
                                <% } %>
                            <% }) %>
                        <% } %>
                        </div>
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <div class="input-group mb-16">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="hp-text-color-dark-0 ri-2x ri-key-fill"></i>
                            </span>
                        <% if(errorForm.length === 0){ %>
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        <% }else{ %>
                            <% errorForm.forEach(function(curr, index, val){ %>
                                <% if(curr.param == "password") { %>
                                    <input type="password" name="password" value="<%= curr.value %>" class="form-control is-invalid" placeholder="Password">
                                    <div class="invalid-feedback">
                                        <%= curr.message %>
                                    </div>
                                <% } %>
                            <% }) %>
                        <% } %>                            
                        </div>
                        <div class="mb-24 form-check">
                            <label class="form-check-label" for="exampleCheck1">Lupa Password? <a href="">Reset</a></label>
                        </div>
                        <button type="submit" class="btn btn-primary">Masuk</button>
                        <a class="btn btn-primary" href="<% process.env.APP_URL %>/auth/register">Daftar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>