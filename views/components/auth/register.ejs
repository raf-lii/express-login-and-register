<div class="hp-main-layout-content">
    <div class="row mt-15 mb-10 d-flex justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4><i class="hp-text-color-dark-0 ri-2x ri-login-box-line"></i>Daftar</h4>
                    <p class="hp-p1-body">
                        Isi formulir dibawah untuk membuat akun baru.
                    </p>
                    <% if(error.length != 0) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>

                    <% if(success.length != 0) { %>
                        <div class="alert alert-success"><%= success %></div>
                    <% } %>
                    <form action="<%= process.env.APP_URL %>/auth/register" method="POST">
                        <label for="exampleInputPassword1" class="form-label">Nama</label>
                        <div class="input-group mb-16">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="hp-text-color-dark-0 ri-2x ri-user-fill"></i>
                            </span>
                            <% const name = errorForm.find(item => item.param == 'name') %>
                            <% if (typeof name != 'undefined') { %>
                                <input type="text" name="name" class="form-control is-invalid" placeholder="Nama Lengkap" value="<%= name.value %>">
                                <div class="invalid-feedback">
                                    <%= name.message %>
                                </div>
                            <% }else{ %>
                                <input type="text" name="name" class="form-control is-invalid" placeholder="Nama Lengkap" value="">
                            <% } %>
                        </div>                        
                        <label for="exampleInputPassword1" class="form-label">Username</label>
                        <div class="input-group mb-16">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="hp-text-color-dark-0 ri-2x ri-user-fill"></i>
                            </span>
                            <% const username = errorForm.find(item => item.param == 'username') %>
                            <% if (typeof username != 'undefined') { %>
                                <input type="text" name="username" class="form-control is-invalid" placeholder="Username" value="<%= username.value %>">
                                <div class="invalid-feedback">
                                    <%= username.message %>
                                </div>
                            <% }else{ %>
                                <input type="text" name="username" class="form-control is-invalid" placeholder="Username" value="">
                            <% } %>
                        </div>
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <div class="input-group mb-16">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="hp-text-color-dark-0 ri-2x ri-key-fill"></i>
                            </span>
                            <% const password = errorForm.find(item => item.param == 'password') %>
                            <% if (typeof password != 'undefined') { %>
                                <input type="password" name="password" class="form-control is-invalid" placeholder="Password" value="<%= password.value %>">
                                <div class="invalid-feedback">
                                    <%= password.message %>
                                </div>
                            <% }else{ %>
                                <input type="password" name="password" class="form-control is-invalid" placeholder="Password" value="">
                            <% } %>                        
                        </div>
                        <div class="mb-24 form-check">
                            <label class="form-check-label" for="exampleCheck1">Lupa Password? <a href="">Reset</a></label>
                        </div>
                        <button type="submit" class="btn btn-primary">Daftar</button>
                        <a class="btn btn-primary" href="<% process.env.APP_URL %>/auth/login">Login</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>